<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="andlima.hafizhfy.chapterenamtugas">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_bmi_rounded"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_bmi_rounded"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChapterEnamTugas"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".pertemuan3.AsyncTaskFilmActivity"
            android:exported="true" />
        <activity
            android:name=".pertemuan2.BMIActivity"
            android:exported="true"
            android:label="BMI Calculator"
            android:theme="@style/Theme.ChapterEnamTugas.BMI" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>